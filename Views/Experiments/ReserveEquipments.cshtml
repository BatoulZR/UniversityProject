@model SeniorProject.Models.Experiment





<h1>Reserve Items</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Reserve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Items" class="control-label">Choose the items you need</label>
                <select multiple size="10" asp-for="Items" class="form-control">
                    @{ foreach (var item in ViewBag.Items)

                        {
            <option value="@item.name"> @item.name </option> } }

                </select>
                <span asp-validation-for="Items" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

