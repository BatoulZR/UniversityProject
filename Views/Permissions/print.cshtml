@model SeniorProject.Models.Permission
@{
    ViewData["Title"] = "print";
}

<h1>Permission To Print</h1>

<h4>New</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="PagesNumber" class="control-label"></label>
                <input asp-for="PagesNumber" class="form-control" />
                <span asp-validation-for="PagesNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Colored" /> @Html.DisplayNameFor(model => model.Colored)
                </label>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" id="datePicker" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" ></textarea>

                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    document.getElementById('datePicker').valueAsDate = new Date();
</script>
